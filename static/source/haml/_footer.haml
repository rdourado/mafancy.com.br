	%section.related
		.wrap
			%h3.header Posts mais lidos
			.tile-list
				- 4.times do |n|
					.tile
						%a{:href => "#", :style => "background-image:url(img/thumb-3.jpg)"}
							.tile-body
								%p.tile-category Crônica
								%h2.tile-title Como estou?
						.tile-share
							%a.icon.facebook{:href => "#", :target => "_blank"}
							%a.icon.twitter{:href => "#", :target => "_blank"}
							%a.icon.pinterest{:href => "#", :target => "_blank"}
							%a.icon.email{:href => "#", :target => "_blank"}
	.wrap
		.nav-foot
			%ul.menu-categories
				- ["Moda", "Beleza", "Viagem", "Cultura", "Lifestyle", "Crônicas", "Mafancy TV"].each do |o|
					%li.menu-item<
						%a{:href => "#"} #{o}
			%ul.menu-site
				- ["Home", "About", "Contato", "Anuncie"].each do |o|
					%li.menu-item<
						%a{:href => "#"} #{o}
			%ul.menu-social
				- ["twitter", "facebook", "instagram", "youtube", "rss", "email"].each do |o|
					%li{:class => "menu-item icon #{o}"}<
